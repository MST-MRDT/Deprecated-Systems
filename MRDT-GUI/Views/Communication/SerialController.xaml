<UserControl x:Class="MRDT_GUI.Views.SerialController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="396.471" d:DesignWidth="390.588">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding SerialOpenCommand}" Margin="0,0,10,0" Height="25">Connect Controller</Button>
            <Button Command="{Binding SerialCloseCommand}" Margin="0,0,10,0" Height="25">Disconnect Controller</Button>
        </StackPanel>
        <ScrollViewer>
            <TextBox Name="SerialDataDisplay" IsReadOnly = "False" Margin="0, 3, 0, 0" Height="250" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" BorderThickness="1" 
                     Text="{Binding TextFromSerialPort}"/>
        </ScrollViewer>
    </StackPanel>
</UserControl>
