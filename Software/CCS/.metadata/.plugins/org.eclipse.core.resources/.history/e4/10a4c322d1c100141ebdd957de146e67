#ifndef ROVEHARDWAREABSTRACTION_H_
#define ROVEHARDWAREABSTRACTION_H_

#include "pinmap.h"

//-------- DEFINITIONS                    ----------//
#define OUTPUT 1
#define INPUT 0
#define HIGH 1
#define LOW 0

//-------- HARDWARE ABSTRACTION FUNCTIONS ----------//
//Sets a pin to be INPUT or OUTPUT
void pinMode(int pin, int mode);

void digitalWrite(int pin, int val);



